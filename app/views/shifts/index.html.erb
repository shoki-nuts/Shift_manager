<h2>
    <%= current_user.email%>
</h2>
<%=link_to "希望提出", new_shift_path %>

<%= month_calendar  events: @shifts do |date, shifts| %>
    <%= date.day %>

    <% shifts.each do |shift| %>
        <div>
            <%= link_to shift.start_at.strftime('%H:%M'), edit_shift_path(shift.id) %>
            <%= link_to shift.end_at.strftime('%H:%M'), edit_shift_path(shift.id) %>
        </div>
    <% end %>
<% end %>