<% @users.each do |user| %>
    <% if user.admin_user %>

        <tr>
            <td>
                <%=user.nickname%>
            </td>
            <td>
                <% if current_user.following?(user) %>
                    <%= form_for(current_user.relationships.find_by(admin_id: user.id), html: { method: :delete }) do |f| %>
                        <%= hidden_field_tag :admin_id, user.id %>
                        <%= f.submit 'フォロー中', class: 'btn btn-outline-dark btn-sm' %>
                    <% end %>
                <% else %>
                    <%= form_for(current_user.relationships.build) do |f| %>
                        <%= hidden_field_tag :admin_id, user.id %> 
                        <%= f.submit 'フォロー', class: 'btn btn-outline-dark btn-sm' %>
                    <% end %>
                <% end %>
            </td>
        </tr>
    <% end %>
<% end %>

